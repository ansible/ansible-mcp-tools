FROM registry.access.redhat.com/ubi9/python-312-minimal:latest AS production

ENV AAP_GATEWAY_URL=${AAP_GATEWAY_URL}
ENV AAP_SERVICE_URL=${AAP_SERVICE_URL}
ENV OPENAPI_SPEC_URL="file:///var/www/aap-controller-api.json"
ENV HOST=${HOST}
ENV PORT=${PORT}
ENV PYTHONUNBUFFERED=1
ENV DEBUG=True

USER 1000
WORKDIR /var/www/

COPY ansible_mcp_tools/ ./ansible_mcp_tools/
COPY aap_controller_api_2_5/server.py ./
COPY aap_controller_api_2_5/aap-controller-api.json ./
COPY aap_controller_api_2_5/pyproject.toml ./pyproject.toml

RUN python -m pip install --no-cache-dir --no-binary=all .

# Launch!
ENTRYPOINT ["python3.12", "server.py"]

EXPOSE ${PORT}
